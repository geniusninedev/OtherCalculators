<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nineinfosys.android.otherscalculators.gradepointer.averagePointer"
    android:background="#CFD8DC">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:text="Enter the Credit And Score to Calculate the Gradepoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_weight="0.05"
                android:textSize="15dp"
                android:gravity="center" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <TextView
                    android:text="Course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_weight="0.05"
                    android:textSize="15dp"
                    android:gravity="center" />

                <TextView
                    android:text="Credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_weight="0.05"
                    android:textSize="15dp"
                    android:gravity="center" />


                <TextView
                    android:text="Score"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_weight="0.05"
                    android:textSize="15dp"/>

                <TextView
                    android:text="Gradpoint"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_weight="0.05"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:inputType="textPersonName"

                        android:textSize="15dp"
                        android:background="@android:drawable/editbox_background"
                        android:id="@+id/course"
                        android:hint="1" />

                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:background="@android:drawable/editbox_background"
                        android:textSize="15dp"
                        android:inputType="numberDecimal"

                        android:id="@+id/credit"
                        android:hint="0"
                        android:gravity="center_vertical|center_horizontal" />


                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:background="@android:drawable/editbox_background"
                        android:layout_weight="0.05"
                        android:id="@+id/score"
                        android:inputType="numberDecimal"

                        android:textSize="15dp"
                        android:hint="0"
                        android:gravity="center" />


                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:background="@android:drawable/editbox_background"
                        android:id="@+id/gradepoint"

                        android:textSize="15dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:inputType="textPersonName"


                        android:background="@android:drawable/editbox_background"
                        android:textSize="15dp"
                        android:id="@+id/coursesecond"
                        android:hint="2" />

                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:textSize="15dp"
                        android:background="@android:drawable/editbox_background"
                        android:id="@+id/creditsecond"
                        android:hint="0"
                        android:inputType="numberDecimal"

                        android:gravity="center_vertical|center" />


                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:inputType="numberDecimal"

                        android:id="@+id/scoresecond"
                        android:textSize="15dp"
                        android:hint="0"
                        android:background="@android:drawable/editbox_background"
                        android:gravity="center_vertical|center" />


                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:id="@+id/gradepointseconf"
                        android:background="@android:drawable/editbox_background"
                        android:textSize="15dp"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text=""
                        android:background="@android:drawable/editbox_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:inputType="textPersonName"

                        android:textSize="15dp"
                        android:id="@+id/coursethird"
                        android:hint="3" />

                    <EditText
                        android:text=""
                        android:background="@android:drawable/editbox_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:textSize="15dp"
                        android:id="@+id/creditthird"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:gravity="center_vertical|center" />


                    <EditText
                        android:text=""
                        android:background="@android:drawable/editbox_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:id="@+id/scorethird"
                        android:textSize="15dp"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:gravity="center_vertical|center" />


                    <TextView
                        android:text=""
                        android:background="@android:drawable/editbox_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:id="@+id/gradepointthird"

                        android:textSize="15dp"/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:textSize="15dp"
                        android:inputType="textPersonName"

                        android:background="@android:drawable/editbox_background"
                        android:id="@+id/coursefourth"
                        android:hint="4" />

                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:textSize="15dp"
                        android:inputType="numberDecimal"
                        android:id="@+id/creditfourth"
                        android:hint="0"
                        android:background="@android:drawable/editbox_background"
                        android:gravity="center_vertical|center" />


                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:id="@+id/scorefourth"
                        android:textSize="15dp"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:background="@android:drawable/editbox_background"
                        android:gravity="center_vertical|center" />


                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:background="@android:drawable/editbox_background"
                        android:id="@+id/gradepointfourth"

                        android:textSize="15dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:text=""
                        android:background="@android:drawable/editbox_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:textSize="15dp"
                        android:inputType="textPersonName"

                        android:id="@+id/coursefifth"
                        android:hint="5" />

                    <EditText
                        android:text=""
                        android:background="@android:drawable/editbox_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:textSize="15dp"
                        android:inputType="numberDecimal"
                        android:id="@+id/creditfifth"
                        android:hint="0"
                        android:gravity="center_vertical|center" />


                    <EditText
                        android:text=""
                        android:background="@android:drawable/editbox_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:inputType="numberDecimal"
                        android:layout_weight="0.05"
                        android:id="@+id/scorefifth"
                        android:textSize="15dp"
                        android:hint="0"
                        android:gravity="center_vertical|center" />


                    <TextView
                        android:text=""
                        android:background="@android:drawable/editbox_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.05"
                        android:id="@+id/gradepointfifth"

                        android:textSize="15dp"/>

                </LinearLayout>

            </LinearLayout>
            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewaverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="SMART_BANNER"
                android:layout_marginTop="50dp"
                ads:adUnitId="@string/banner_ad_unit_id">

            </com.google.android.gms.ads.AdView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:weightSum="1">
                <Button
                    android:text="Calculate"
                    android:layout_gravity="center"
                    android:background="#90A4AE"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/calculate"
                    android:layout_weight="0.07" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text=""

                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:textColor="#000000"

                        android:background="@android:drawable/editbox_background"
                        android:id="@+id/totalcredit"
                        android:textSize="15dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>